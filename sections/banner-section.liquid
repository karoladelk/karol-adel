<section class="banner-section">
  <!-- Top Frame -->
  <div class="banner-top">
    {% if section.settings.frame %}
      {{
        section.settings.frame
        | image_url: width: 3840
        | image_tag: 
          alt: "Top Frame", 
          class: "banner-top-frame"
      }}
    {% else %}
      <p>No top frame selected</p>
    {% endif %}
  </div>

  <!-- Bottom Content -->
  <div class="banner-bottom">
    <!-- Left Content -->
    <div class="banner-left">
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-subheading">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-button">
        {{ section.settings.button_text }}
      </a>
    </div>

    <!-- Right Content -->
    <div class="banner-right">
      {% if section.settings.frame %}
        {{
          section.settings.frame
          | image_url: width: 3840
          | image_tag: 
            alt: "Bottom Frame", 
            class: "banner-bottom-frame"
        }}
      {% else %}
        <p>No bottom frame selected</p>
      {% endif %}
    </div>
  </div>
</section>


<style>
  
  .banner-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin: 0 auto;
    width: 1440px;
    height: 780px;

  }

  .banner-top {
    width: 100%;
    margin-bottom: 20px;
  }

  .banner-top img {
    max-width: 100%;
    height: auto;
  }

  .banner-bottom {
    display: flex;
    width: 100%;
    height: auto;
  }

  /* Left Content */
  .banner-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 20px;
    text-align: left;
  }

  .banner-heading {
    margin-bottom: 10px;
    font-family: 'Jost', sans-serif;
    font-size: 70px;
    font-weight: 500;
    line-height: 70px;
    text-align: left;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;

  }

  .banner-subheading {
    margin-bottom: 20px;
    font-family: 'Jost', sans-serif; 
    font-size: 20px;
    font-weight: 400;
    line-height: 28px;
    text-align: left;
    text-underline-position: from-font;
    text-decoration-skip-ink: none;

  }

  

  .banner-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #ffd700;
    color: #000;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    transition: all 0.3s ease;
    font-family: 'Jost', sans-serif; 
    font-size: 15px;
    font-weight: 400;
    line-height: 20.48px;
    text-align: center;
    
  }

  .banner-button:hover {
    background-color: #000;
    color: #ffd700;
  }

  .banner-right {
    flex: 1;
    display: flex;
    overflow: hidden;
  }

  .banner-right img {
    width: auto; /* Ensure full width */
    height:auto;


{% schema %}
{
  "name": "Split Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "frame",
      "label": "Top Frame Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover your ultimate holiday gift destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Split Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}


