<section class="banner-section">
  <!-- Top Frame -->
<div class="banner-top">
  {% if section.settings.image %}
    {{
      section.settings.image
      | image_url: width: 3840
      | image_tag: 
        alt: "Top Frame", 
        class: "banner-top-frame"
    }}
  {% else %}
    <p>No image selected</p>
  {% endif %}
</div>


  <!-- Bottom Content -->
  <div class="banner-bottom">
    <!-- Left Content -->
    <div class="banner-left">
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-subheading">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-button">
        {{ section.settings.button_text }}
      </a>
    </div>

    <!-- Right Content -->
    <div class="banner-right">
        {% if section.settings.image %}
    {{
      section.settings.image
      | image_url: width: 3840
      | image_tag: 
        alt: "Top Frame", 
        class: "banner-bottom-frame"
    }}
  {% else %}
    <p>No image selected</p>
  {% endif %}
    </div>
  </div>
</section>

<style>
  .banner-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin: 0 auto;
    max-width: 1200px;
  }

  .banner-top {
    width: 100%;
    margin-bottom: 20px;
  }

  .banner-top img {
    max-width: 100%;
    height: auto;
  }

  .banner-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    gap: 20px;
  }

  .banner-left {
    flex: 1;
    text-align: left;
  }

  .banner-heading {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .banner-subheading {
    font-size: 1.2rem;
    margin-bottom: 20px;
  }

  .banner-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #ffd700;
    color: #000;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .banner-button:hover {
    background-color: #000;
    color: #ffd700;
  }

  .banner-right img {
    max-width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    .banner-bottom {
      flex-direction: column;
      text-align: center;
    }

    .banner-left, .banner-right {
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-banner.settings.image.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover your ultimate holiday gift destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
