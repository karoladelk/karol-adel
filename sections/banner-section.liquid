<section class="banner-section">
  <!-- Top Frame -->
  <div class="banner-top">
    {% if section.settings.frame %}
      {{
        section.settings.frame
        | image_url: width: 3840
        | image_tag: 
          alt: "Top Frame", 
          class: "banner-top-frame"
      }}
    {% else %}
      <p>No top frame selected</p>
    {% endif %}
  </div>

  <!-- Bottom Content -->
  <div class="banner-bottom">
    <!-- Left Content -->
    <div class="banner-left">
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-subheading">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-button">
        <p class="button-text">
        {{ section.settings.button_text }} 
      </p>
        <!-- the arrow -->
        <svg class="arrow" xmlns="http://www.w3.org/2000/svg" width="50" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="45" y2="12"></line>
          <polyline points="35 4 45 12 35 20"></polyline>
        </svg>
         
      </a>

      
    </div>

    <!-- Right Content -->
    <div class="banner-right">
      {% if section.settings.frame %}
        {{
          section.settings.frame
          | image_url: width: 3840
          | image_tag: 
            alt: "Bottom Frame", 
            class: "banner-bottom-frame"
        }}
      {% else %}
        <p>No bottom frame selected</p>
      {% endif %}
    </div>
  </div>
</section>


<style>

@import url('https://fonts.googleapis.com/css2?family=Jost:wght@400;500&display=swap');

  .banner-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin: 0 auto;
    width: 100%;
    height: 780px;
  }

  .banner-top {
    width: 100%;
    margin-bottom: auto;
    overflow: hidden;
  }

  .banner-top img {
    position: absolute; 
    top: 0; 
    left: 0; 
    width: 100%; 
    height: auto; 
    object-fit: cover; 
    transform-origin: bottom left;
    transform: translateY(-40px);

    
  }

  .banner-bottom {
    display: flex;
    width: 100%;
    height: 402px;
  }

  /* Left Content */
  .banner-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: left;
    margin-left: 4%;

  }

.banner-heading {
  margin-bottom: 25px;
  font-family: 'Jost', sans-serif;
  font-size: 70px; 
  font-weight: 500;
  line-height: 70px;
  text-align: left;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;
  color: #000; 
  opacity: 1; 
}

.banner-subheading {
  margin-bottom: 18px;
  color: #000;
  width: 530px;
  font-family: Jost;
  font-size: 20px;
  line-height: 28px;
  text-align: left;
  text-underline-position: from-font;
  text-decoration-skip-ink: none;

}

/* The button */
.banner-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 15px 30px;
  background-color: #000;
  color: #fff;
  font-family: 'Jost', sans-serif;
  font-size: 15px;
  font-weight: 400;
  text-decoration: none;
  text-transform: uppercase;
  border: none;
  border-radius: 0;
  position: relative;
  overflow: hidden;
  transition: background-color 0.3s ease, transform 0.3s ease;
  margin-top: 20px;
  width: 220px;
  height: 50px;
  opacity: 1;
}

.banner-button .arrow {
  font-size: 18px;
  margin-left: auto;
  transition: transform 0.3s ease, color 0.3s ease;
}

.banner-button .button-text {
  flex-grow: 1;
  text-align: center;
  font-family: 'Jost', sans-serif;
  font-size: 16px;
  font-weight: 400;
  line-height: 20.28;
}

.banner-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background-color: #FFF544;
  z-index: 0;
  transition: left 0.3s ease;
}

.banner-button:hover::before {
  left: 0;
}

.banner-button:hover {
  color: #000;
}

.banner-button:hover .arrow {
  transform: translateX(5px);
  color: #000;
}

.banner-button:hover .button-text {
  color: #000;
}

.banner-button span {
  position: relative;
  z-index: 1;
}


/* Right Content */
.banner-right {
  width: 890px; 
  height: 400px; 
  display: flex;
  overflow: hidden;
  position: relative; 
}

.banner-right img {
  margin-top: 5px;
  position: absolute; 
  top: 0; 
  left: 0; 
  width: 100%; 
  height: auto; 
  object-fit: cover; 
  transform-origin: top left; 
  scale: 1.6; 
}

  /* for responsiveness */
  @media (max-width: 768px) {
    .banner-bottom {
      flex-direction: column;
      text-align: center;
      height: auto; 
    }

    .banner-right {
      width: 100%; 
      height: auto;
    }

    .banner-left {
      text-align: center;
    }
  }






</style>

{% schema %}
{
  "name": "Split Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "frame",
      "label": "Top Frame Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover your ultimate holiday gift destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Split Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}




