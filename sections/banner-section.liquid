<section class="banner-section">
  <div class="banner-top">
    {% if section.settings.frame %}
      {{
        section.settings.frame
        | image_url: width: 3840
        | image_tag: 
          alt: "Top Frame", 
          class: "banner-top-frame"
      }}
    {% endif %}
  </div>

  <div class="banner-bottom">
    <div class="banner-left">
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-subheading">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-button">
        <p class="button-text">{{ section.settings.button_text }}</p>
        <!-- Normal Arrow Image -->
        {% if section.settings.arrow %}
          <img src="{{ section.settings.arrow | image_url: width: 25 }}" alt="Arrow" class="icon-arrow" />
        {% endif %}
        <!-- Hover Arrow Image -->
        {% if section.settings.arrow_hover %}
          <img src="{{ section.settings.arrow_hover | image_url: width: 25 }}" alt="Arrow Hover" class="icon-arrow-hover" />
        {% endif %}
      </a>
      
      
    </div>
    <div class="banner-right">
      {% if section.settings.frame %}
        {{
          section.settings.frame
          | image_url: width: 3840
          | image_tag: 
            alt: "Bottom Frame", 
            class: "banner-bottom-frame"
        }}
      {% endif %}
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Jost:wght@400;500&display=swap');

  .banner-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    height: 100vh;
    overflow: hidden;
  }

  .banner-top {
    flex: 1;
    width: 100%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .banner-top img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: bottom left;
    transform-origin: bottom left;

  }

  .banner-bottom {
    flex: 1;
    display: flex;
    width: 100%;
    height: 50%;
    position: relative;
  }

  .banner-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    text-align: left;
    padding-left: 4%;
    top: 0;
  }

  .banner-heading {
    margin-bottom: 25px;
    font-family: 'Jost', sans-serif;
    font-size: 70px;
    font-weight: 500;
    line-height: 70px;
    text-align: left;
    color: #000;
  }

  .banner-subheading {
    margin-bottom: 18px;
    font-family: 'Jost', sans-serif;
    font-size: 20px;
    line-height: 28px;
    text-align: left;
    color: #000;
    width: 100%;
    top: 0;
  }

  .banner-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 15px 30px;
    background-color: #000;
    color: #fff;
    font-family: 'Jost', sans-serif;
    font-size: 15px;
    font-weight: 400;
    text-decoration: none;
    border: none;
    position: relative;
    overflow: hidden;
    transition: background-color 0.3s ease;
    margin-top: 20px;
    width: 220px;
    height: 50px;
    z-index: 2; /* Higher z-index to appear above the image */
  }

  .banner-button .icon-arrow {
  margin-left: 10px;
  /* width: 25px; 
  height: auto; */
  transition: transform 0.3s ease, color 0.3s ease;
}


.banner-button:hover {
  background-color: #fff544; 
  color: #000; 
}

.banner-button:hover .icon-arrow {
  opacity: 0; /* Hide normal arrow on hover */
}

.banner-button:hover .icon-arrow-hover {
  display: block; /* Show the hover arrow */
  transform: translateX(5px); /* Slide animation */
}

  .banner-right {
    width: 60%;
    height: 100%;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .banner-right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top left;
    z-index: 1; 
    transform-origin: top left;
    transform: scale(1.4);
  }

  .banner-button:hover{
      background-color: #FFF544;
      color: #000;
      opacity: 1;
      transition: background-color 0.3s ease, color 0.3s ease;
      box-shadow: 0px 2px 4px 0px #00000033;
    }


  @media (max-width: 768px) {
    .banner-section {
      height: auto;
    }

    .banner-top {
      display: none;
    }

    .banner-bottom {
      flex-direction: column;
      text-align: center;
      height: auto;
    }

    .banner-left {
      text-align: center;
      padding-left: 0;
      margin-bottom: 20px;
    }

    .banner-heading {
      font-size: 40px;
      line-height: 50px;
    }

    .banner-subheading {
      font-size: 18px;
      line-height: 24px;
      display: none;
    }

    .banner-right {
      width: 100%;
      height: auto;
    }

    /* .banner-button {
      position: absolute;
      top: 80%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 2;
    } */

    .banner-button{
      width: Hug (193px)px;
      height: Hug (45px)px;
      top: 337px;
      left: 90.78px;
      padding: 13px 20px 13px 20px;
      gap: 10px;
      opacity: 0px;
      display: flex;
      align-items: center;
      justify-content: center;

    }


    .banner-button .arrow{
      font-size: 18px;
      margin-left: 10px;
      transition: transform 0.3s ease, color 0.3s ease;
      /* display: none; */
    }

    .banner-button .button-text {
      font-size: 18px;
      text-align: center;
      align-items: center;

    } 

    .banner-right img {
      margin-top: 10px;
      transform: scale(1);
      /* width: 100%; */
      height: 40vh;
      object-fit: cover;
      object-position: center;

    }
  }
</style>

{% schema %}
{
  "name": "Split Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "frame",
      "label": "Top Frame Image"
    },
    {
      "type": "image_picker",
      "id": "arrow",
      "label": "Arrow Image"
    },
    {
      "type": "image_picker",
      "id": "arrow_hover",
      "label": "Arrow Hover Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover your ultimate holiday gift destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "name": "Split Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
