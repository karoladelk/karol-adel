<section class="banner-section">
  <!-- Top Frame -->
  <div class="banner-top">
    <img src="{{ section.settings.top_frame }}" alt="Frame 1" class="banner-top-frame">
  </div>

  <!-- Bottom Content -->
  <div class="banner-bottom">
    <div class="banner-left">
      <!-- Left Content: Heading, Subheading, Button -->
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-subheading">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="banner-button">{{ section.settings.button_text }}</a>
    </div>

    <div class="banner-right">
      <!-- Right Content: Bottom Frame -->
      <img src="{{ section.settings.bottom_frame }}" alt="Frame 2" class="banner-bottom-frame">
    </div>
  </div>
</section>

<style>
  /* General Styles for the Banner Section */
  .banner-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0 auto;
    max-width: 1200px;
    text-align: center;
  }

  /* Top Frame */
  .banner-top {
    width: 100%;
    text-align: center;
    margin-bottom: 20px;
  }

  .banner-top-frame {
    max-width: 100%;
    height: auto;
  }

  /* Bottom Content */
  .banner-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    gap: 20px;
  }

  /* Left Content */
  .banner-left {
    flex: 1;
    text-align: left;
  }

  .banner-heading {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .banner-subheading {
    font-size: 1.2rem;
    margin-bottom: 20px;
  }

  .banner-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #ffd700;
    color: #000;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    transition: all 0.3s ease;
  }

  .banner-button:hover {
    background-color: #000;
    color: #ffd700;
  }

  /* Right Content */
  .banner-right {
    flex: 1;
    text-align: right;
  }

  .banner-bottom-frame {
    max-width: 100%;
    height: auto;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .banner-bottom {
      flex-direction: column;
      text-align: center;
    }

    .banner-left, .banner-right {
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Banner Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "top_frame",
      "label": "Top Frame Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover your ultimate holiday gift destination."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "image_picker",
      "id": "bottom_frame",
      "label": "Bottom Frame Image"
    }
  ],
  "presets": [
    {
      "name": "Banner Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
